# Пример файла секретов для staging окружения
# Использование:
# 1. Скопируйте этот файл в secrets.yaml
# 2. Заполните реальными значениями
# 3. Зашифруйте: sops -e secrets.yaml > secrets.enc.yaml
# 4. Удалите незашифрованный secrets.yaml

database:
  host: "your-staging-db-host"
  port: 5432
  name: "ringo_staging"
  user: "ringo_staging"
  password: "your-staging-db-password"

redis:
  host: "your-staging-redis-host"
  port: 6379
  password: "your-staging-redis-password"

aws:
  access_key_id: "your-staging-access-key"
  secret_access_key: "your-staging-secret-key"
  bucket: "ringo-storage-staging"
  endpoint_url: "https://nyc1.digitaloceanspaces.com"

django:
  secret_key: "your-staging-secret-key-min-50-chars"
  allowed_hosts: "api-staging.ringo.example.com,staging.ringo.example.com"

jwt:
  access_minutes: 30
  refresh_days: 7

celery:
  broker_url: "redis://your-staging-redis-host:6379/0"
  result_backend: "redis://your-staging-redis-host:6379/0"
  worker_concurrency: 4
  worker_autoscaler_min: 2
  worker_autoscaler_max: 10

notifications:
  fcm_server_key: "your-fcm-server-key"
  telegram_bot_token: "your-telegram-bot-token"
  sms_api_key: "your-sms-api-key"
  sms_api_url: "https://sms-api.example.com"

encryption:
  key: "your-encryption-key-32-bytes-base64"

email:
  host: "smtp.example.com"
  port: 587
  use_tls: true
  user: "noreply@ringo.example.com"
  password: "your-email-password"

