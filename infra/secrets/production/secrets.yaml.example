# Пример файла секретов для production окружения
# ВАЖНО: Используйте сильные пароли и ключи для production!
# Использование:
# 1. Скопируйте этот файл в secrets.yaml
# 2. Заполните реальными значениями
# 3. Зашифруйте: sops -e secrets.yaml > secrets.enc.yaml
# 4. Удалите незашифрованный secrets.yaml
# 5. Храните PGP ключи в безопасном месте

database:
  host: "your-prod-db-host"
  port: 5432
  name: "ringo_production"
  user: "ringo_production"
  password: "your-strong-prod-db-password-min-32-chars"

redis:
  host: "your-prod-redis-host"
  port: 6379
  password: "your-strong-prod-redis-password"

aws:
  access_key_id: "your-prod-access-key"
  secret_access_key: "your-prod-secret-key"
  bucket: "ringo-storage-production"
  endpoint_url: "https://nyc1.digitaloceanspaces.com"

django:
  secret_key: "your-strong-prod-secret-key-min-50-chars-use-openssl-rand-hex-32"
  allowed_hosts: "api.ringo.example.com,www.ringo.example.com"

jwt:
  access_minutes: 15  # Короче для production
  refresh_days: 7

celery:
  broker_url: "redis://your-prod-redis-host:6379/0"
  result_backend: "redis://your-prod-redis-host:6379/0"
  worker_concurrency: 8
  worker_autoscaler_min: 4
  worker_autoscaler_max: 20

notifications:
  fcm_server_key: "your-fcm-server-key"
  telegram_bot_token: "your-telegram-bot-token"
  sms_api_key: "your-sms-api-key"
  sms_api_url: "https://sms-api.example.com"

encryption:
  key: "your-strong-encryption-key-32-bytes-base64"

email:
  host: "smtp.example.com"
  port: 587
  use_tls: true
  user: "noreply@ringo.example.com"
  password: "your-email-password"

