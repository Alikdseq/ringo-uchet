# Appfile для конфигурации Fastlane

# Android
json_key_file("fastlane/google-play-service-account.json") # Путь к service account JSON
package_name("com.ringo.uchet")

# iOS
app_identifier("com.ringo.uchet")
apple_id("your-apple-id@example.com")
team_id("YOUR_TEAM_ID")

# Общее
app_version("1.0.0")
build_number(ENV["BUILD_NUMBER"] || "1")

